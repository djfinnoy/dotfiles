# Configure kubectl for a given Google Kubernetes Engine cluster

kpull () {

  CLUSTER="$1"
  PROJECT="$2"
  if [ -z "$3" ]; then
    REGION=europe-west1
  else
    REGION="$3"
  fi
  
  gcloud container clusters get-credentials $CLUSTER --region $REGION --project $PROJECT
  kubectl config rename-context $(kubectl config current-context | tr -d '\r') "$PROJECT-$CLUSTER"
}

